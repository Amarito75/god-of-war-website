@font-face
{
    font-family 'Baron'
    src url(/static/fonts/BaronNeueBold.woff2) format('woff2'),
        url(/static/fonts/BaronNeueBold.woff) format('woff')
    font-weight 700
    font-style normal
}


*

    margin: 0
    padding: 0


html,
body

    background: #ffffff
canvas

    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%

    

.point1
    z-index: 1
    position: absolute
    top: 18%
    left: 58%
    

.point1:hover .text

    opacity: 1

.point1 .label

    position: absolute
    top: -20px
    left: -20px
    width: 20px
    height: 20px
    border-radius: 50%
    background: #00000077
    border: 1px solid #ffffff77
    color: #ffffff
    font-family: Baron
    text-align: center
    line-height: 40px
    font-weight: 100
    font-size: 14px

.point1:hover .text

    opacity: 1

.point1 .text

    position: absolute
    top: 30px
    left: -120px
    width: 200px
    padding: 20px
    border-radius: 4px
    background: #00000077
    border: 1px solid #ffffff77
    color: #ffffff
    line-height: 1.3em
    font-family: Baron
    font-weight: 100
    font-size: 14px
    opacity: 0
    transition: opacity 0.3s
    pointer-events: none

